<Window x:Name="tb" x:Class="chat_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chat_client"
        mc:Ignorable="d"
        Title="MainWindow" Height="411" Width="537.5" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="23" Margin="106,10,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" Width="414"/>
        <Button x:Name="btnConDiscon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="79" Height="23"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="206" Margin="10,60,0,0" VerticalAlignment="Top" Width="510"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="80" Margin="10,290,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="510" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
